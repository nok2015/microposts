<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if micropost.user_id != current_user.id %>
      <%= link_to "リツイート", retweet_micropost_path(micropost), method: :post,
                                      data: { confirm: "本当にリツイートしますか？" } %>
    <% end %>
    <% if micropost.originpost_id != nil %>
      <% origin_user = User.find_by(id: [micropost.originpost.user_id]) %>
      <%= link_to origin_user.name, origin_user %><%= "からリツイート" %>
    <% end %>
    <% if current_user == micropost.user %>
      <%= link_to "delete", micropost_path(micropost), method: :delete,
                                       data: { confirm: "本当に削除しますか？" } %>
    <% end %>
  </span>
</li>