<h1>
  プロフィール編集画面
</h1>
<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
      <div class="field">
        <%= f.label :名前 %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :自己紹介文 %><br>
        <%= f.text_area :profile %>
      </div>
      <div class="field">
        <%= f.label :地域 %><br>
        <%= f.text_field :place %>
      </div>
      <div class="field">
        <%= f.label :メールアドレス %><br>
        <%= f.text_field :email %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>